---
/**
 * Team Section - Coaches Marquee
 * Muestra el equipo de coaches certificados
 */

/// <reference types="node" />
import { readdirSync } from "node:fs";
import path from "node:path";
import process from "node:process";

// Get coaches from public/coachs directory
const coachesDir = path.join(process.cwd(), "public/coachs");

interface Coach {
    filename: string;
    name: string;
    role: string;
    isLeader: boolean;
}

let coaches: Coach[] = [];

try {
    const files = readdirSync(coachesDir);

    coaches = files
        .filter((file) => !file.startsWith(".")) // Ignore hidden files
        .map((file) => {
            // Parse format: "Role _ Name.ext"
            const nameParts = file.split("_");
            let role = "Money Strategist Especializado";
            let name = file.replace(/\.[^/.]+$/, ""); // Remove extension

            if (nameParts.length >= 2) {
                role = nameParts[0].trim();
                name = nameParts[1].replace(/\.[^/.]+$/, "").trim(); // Remove extension from name part
            }

            return {
                filename: file,
                name: name,
                role: role,
                isLeader:
                    role.toLowerCase().includes("líder") ||
                    role.toLowerCase().includes("lider"),
            };
        })
        // Sort leaders first
        .sort((a, b) => (a.isLeader === b.isLeader ? 0 : a.isLeader ? -1 : 1));
} catch (e) {
    console.error("Error reading coaches directory:", e);
    // Fallback empty array or placeholder if needed
}

// Split into two groups for double marquee effect
const midPoint = Math.ceil(coaches.length / 2);
const row1 = coaches.slice(0, midPoint);
const row2 = coaches.slice(midPoint);
---

<section
    class="py-20 bg-claudia-dark relative overflow-hidden border-t border-white/5"
>
    <div class="container-rebellion mb-12 text-center relative z-10 px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-claudia-text-light mb-4">
            Conoce a nuestro <span class="text-claudia-accent-green"
                >Equipo de Expertos</span
            >
        </h2>
        <p
            class="text-xl text-claudia-text-gray max-w-2xl mx-auto font-light leading-relaxed"
        >
            Contamos con profesionales certificados en AMV y expertos en
            planeación financiera, entrenados para guiarte en tu camino hacia la
            libertad financiera.
        </p>
    </div>

    <!-- Marquee Container -->
    <div class="relative flex flex-col gap-8">
        <!-- Gradient Masks -->
        <div
            class="absolute inset-y-0 left-0 w-20 md:w-60 bg-gradient-to-r from-claudia-dark via-claudia-dark/80 to-transparent z-20 pointer-events-none"
        >
        </div>
        <div
            class="absolute inset-y-0 right-0 w-20 md:w-60 bg-gradient-to-l from-claudia-dark via-claudia-dark/80 to-transparent z-20 pointer-events-none"
        >
        </div>

        <!-- Row 1: Left to Right -->
        <div class="relative w-full overflow-hidden">
            <div
                class="flex gap-4 md:gap-6 w-max animate-marquee hover:[animation-play-state:paused] pl-6"
            >
                <!-- Original Set -->
                {
                    row1.map((coach) => (
                        <div class="relative flex-shrink-0 w-48 h-[16rem] md:w-64 md:h-[22rem] rounded-2xl overflow-hidden border border-white/10 group cursor-pointer bg-claudia-secondary">
                            <img
                                src={`/coachs/${coach.filename}`}
                                alt={coach.name}
                                class="w-full h-full object-cover object-top transition-transform duration-700 group-hover:scale-110"
                                loading="lazy"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/95 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity" />

                            <div class="absolute bottom-0 left-0 right-0 p-4 md:p-5 translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                                {coach.isLeader && (
                                    <span class="inline-block px-2 py-0.5 rounded text-[10px] font-bold bg-claudia-accent-orange text-claudia-dark mb-2 tracking-wider">
                                        LÍDER
                                    </span>
                                )}
                                <h3 class="text-white font-bold text-base md:text-lg leading-tight mb-1">
                                    {coach.name}
                                </h3>
                                <p class="text-claudia-text-gray text-[10px] md:text-xs uppercase tracking-wide opacity-80">
                                    {coach.role}
                                </p>
                            </div>
                        </div>
                    ))
                }
                <!-- Duplicate Set for Loop -->
                {
                    row1.map((coach) => (
                        <div class="relative flex-shrink-0 w-64 h-[22rem] rounded-2xl overflow-hidden border border-white/10 group cursor-pointer bg-claudia-secondary">
                            <img
                                src={`/coachs/${coach.filename}`}
                                alt={coach.name}
                                class="w-full h-full object-cover object-top transition-transform duration-700 group-hover:scale-110"
                                loading="lazy"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/95 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity" />

                            <div class="absolute bottom-0 left-0 right-0 p-5 translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                                {coach.isLeader && (
                                    <span class="inline-block px-2 py-0.5 rounded text-[10px] font-bold bg-claudia-accent-orange text-claudia-dark mb-2 tracking-wider">
                                        LÍDER
                                    </span>
                                )}
                                <h3 class="text-white font-bold text-lg leading-tight mb-1">
                                    {coach.name}
                                </h3>
                                <p class="text-claudia-text-gray text-xs uppercase tracking-wide opacity-80">
                                    {coach.role}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Row 2: Right to Left (Reverse) -->
        <div class="relative w-full overflow-hidden">
            <div
                class="flex gap-4 md:gap-6 w-max animate-marquee-reverse hover:[animation-play-state:paused] pl-6"
            >
                <!-- Original Set -->
                {
                    row2.map((coach) => (
                        <div class="relative flex-shrink-0 w-64 h-[22rem] rounded-2xl overflow-hidden border border-white/10 group cursor-pointer bg-claudia-secondary">
                            <img
                                src={`/coachs/${coach.filename}`}
                                alt={coach.name}
                                class="w-full h-full object-cover object-top transition-transform duration-700 group-hover:scale-110"
                                loading="lazy"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/95 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity" />

                            <div class="absolute bottom-0 left-0 right-0 p-5 translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                                {coach.isLeader && (
                                    <span class="inline-block px-2 py-0.5 rounded text-[10px] font-bold bg-claudia-accent-orange text-claudia-dark mb-2 tracking-wider">
                                        LÍDER
                                    </span>
                                )}
                                <h3 class="text-white font-bold text-lg leading-tight mb-1">
                                    {coach.name}
                                </h3>
                                <p class="text-claudia-text-gray text-xs uppercase tracking-wide opacity-80">
                                    {coach.role}
                                </p>
                            </div>
                        </div>
                    ))
                }
                <!-- Duplicate Set for Loop -->
                {
                    row2.map((coach) => (
                        <div class="relative flex-shrink-0 w-64 h-[22rem] rounded-2xl overflow-hidden border border-white/10 group cursor-pointer bg-claudia-secondary">
                            <img
                                src={`/coachs/${coach.filename}`}
                                alt={coach.name}
                                class="w-full h-full object-cover object-top transition-transform duration-700 group-hover:scale-110"
                                loading="lazy"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/95 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity" />

                            <div class="absolute bottom-0 left-0 right-0 p-5 translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                                {coach.isLeader && (
                                    <span class="inline-block px-2 py-0.5 rounded text-[10px] font-bold bg-claudia-accent-orange text-claudia-dark mb-2 tracking-wider">
                                        LÍDER
                                    </span>
                                )}
                                <h3 class="text-white font-bold text-lg leading-tight mb-1">
                                    {coach.name}
                                </h3>
                                <p class="text-claudia-text-gray text-xs uppercase tracking-wide opacity-80">
                                    {coach.role}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes marquee {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    @keyframes marquee-reverse {
        0% {
            transform: translateX(-50%);
        }
        100% {
            transform: translateX(0);
        }
    }

    .animate-marquee {
        animation: marquee 80s linear infinite; /* Slower for elegance */
    }

    .animate-marquee-reverse {
        animation: marquee-reverse 80s linear infinite;
    }
</style>
