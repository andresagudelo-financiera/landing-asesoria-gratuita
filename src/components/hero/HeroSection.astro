---
/**
 * Hero Section - Asesoría Gratuita
 * Diseño elegante y profesional para Finanzas con Claudia Uribe
 */

import HeroBackground from "./HeroBackground";

// ... (existing constants)

const hotmartUrl = "https://pay.hotmart.com/Q104268411L?off=daig1z7w";
const ctaUrl = "https://viewer.leapchat.digital/mv-asesoria-gratuita";
---

<section
  id="hero"
  class="relative min-h-screen flex items-center overflow-hidden bg-claudia-dark pt-12 lg:pt-0"
>
  <!-- Top Scarcity Bar -->
  <div
    class="fixed top-0 left-0 right-0 z-50 bg-claudia-accent-orange/10 backdrop-blur-md border-b border-claudia-accent-orange/20 py-2"
  >
    <div
      class="container-rebellion flex justify-center items-center gap-3 text-claudia-accent-orange text-sm md:text-base font-bold tracking-wide uppercase"
    >
      <span class="relative flex h-2 w-2">
        <span
          class="animate-ping absolute inline-flex h-full w-full rounded-full bg-claudia-accent-orange opacity-75"
        ></span>
        <span
          class="relative inline-flex rounded-full h-2 w-2 bg-claudia-accent-orange"
        ></span>
      </span>
      <span>⚠️ Últimos lugares disponibles este mes</span>
    </div>
  </div>

  <!-- Interactive Background -->
  <HeroBackground client:only="react" />

  <div class="container-rebellion relative z-10">
    <div
      class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center py-20 lg:py-0"
    >
      <!-- Left Column - Content -->
      <div class="hero-content space-y-6 animate-[slide-up_0.8s_ease-out]">
        <!-- Brand Name -->
        <div class="mb-2">
          <img
            src="/logo/Recurso 2.png"
            alt="Claudia Uribe"
            class="h-14 md:h-20 w-auto"
          />
        </div>

        <!-- Eyebrow Text -->
        <p
          class="text-claudia-accent-orange font-light tracking-widest text-sm md:text-base mb-12"
        >
          Mentoría Financiera Personalizada
        </p>

        <!-- Headline -->
        <h1 class="text-heroic leading-tight lg:leading-tight">
          <span
            class="block text-claudia-text-light text-4xl md:text-6xl mb-2 uppercase font-bold"
            >Hackea tu</span
          >
          <span
            class="block text-claudia-accent-green text-4xl md:text-6xl uppercase font-bold"
            >estancamiento financiero.</span
          >
        </h1>

        <!-- Subheadline -->
        <p
          class="text-xl lg:text-2xl text-claudia-text-gray font-light max-w-xl"
          style="line-height: 1.6;"
        >
          Te obsequiamos un espacio de alto valor con un <span
            class="text-claudia-accent-green font-medium">Money Strategist</span
          > especializado en la metodología de <span
            class="text-white font-medium">Claudia Uribe</span
          >. Identificaremos tus patrones financieros y trazaremos tu mapa de
          crecimiento.
        </p>

        <!-- CTA Section -->
        <div class="flex flex-col items-start gap-4 pt-4">
          <!-- CTA Button -->
          <a
            href="#"
            onclick="Typebot.open(); return false;"
            class="group relative inline-flex items-center justify-center px-8 py-4 bg-claudia-accent-green text-claudia-dark font-bold text-lg rounded-full overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-[0_0_20px_rgba(198,255,0,0.4)]"
          >
            <span class="relative z-10 flex items-center gap-2">
              AGENDAR MI SESIÓN GRATUITA
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 transition-transform group-hover:translate-x-1"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </span>
          </a>
        </div>
      </div>

      <!-- Right Column - Image -->
      <div
        class="hero-image-container relative animate-[slide-up_0.8s_ease-out_0.2s] opacity-0 [animation-fill-mode:forwards]"
      >
        <!-- Background Aura / Glow -->
        <div class="absolute -inset-4 md:-inset-10 z-0">
          <div
            class="absolute top-1/4 -left-4 w-64 h-64 bg-claudia-accent-green/20 rounded-full blur-[80px] animate-pulse-slow"
          >
          </div>
          <div
            class="absolute bottom-1/4 -right-4 w-64 h-64 bg-claudia-accent-orange/15 rounded-full blur-[80px] animate-pulse-slow"
            style="animation-delay: 2s;"
          >
          </div>
        </div>

        <!-- Image Container - Breakout Effect -->
        <div
          class="hero-breakout relative z-10 animate-float"
          style="transform-origin: center bottom; scale: 1.1;"
        >
          <!-- Card Background (offset: flush bottom+right, inset top+left for hand overflow) -->
          <div
            class="absolute top-[12%] left-[12%] right-0 bottom-0 rounded-3xl shadow-[0_20px_50px_rgba(0,0,0,0.5)] border border-claudia-accent-green/20 bg-gradient-to-br from-claudia-dark/80 via-claudia-dark/60 to-transparent backdrop-blur-sm overflow-hidden"
          >
            <!-- Decorative Light Wash on Card -->
            <div
              class="absolute inset-0 bg-gradient-to-tr from-claudia-accent-green/5 via-transparent to-claudia-accent-orange/5 pointer-events-none"
            >
            </div>
          </div>

          <!-- Image (hands overflow the card to the left and top) -->
          <img
            src="/6.png"
            alt="Claudia Uribe - Money Strategist"
            class="relative z-10 w-full h-auto brightness-110 contrast-105"
            style="filter: drop-shadow(0 10px 30px rgba(0,0,0,0.5));"
            loading="eager"
          />
        </div>
      </div>
    </div>

    <script>
      import { gsap } from "gsap";
      import { ScrollTrigger } from "gsap/ScrollTrigger";

      gsap.registerPlugin(ScrollTrigger);

      // Parallax / Fade Effects
      const tl = gsap.timeline({
        scrollTrigger: {
          trigger: "#hero",
          start: "top top",
          end: "bottom top",
          scrub: 1, // Smooth scrubbing
        },
      });

      // Text moves UP and fades OUT
      tl.to(
        ".hero-content",
        {
          y: -100,
          opacity: 0,
          ease: "none",
        },
        0,
      );

      // Image moves DOWN (parallax) and scales slightly
      tl.to(
        ".hero-image-container",
        {
          y: 50,
          scale: 1.05,
          ease: "none",
        },
        0,
      );
    </script>

    <style>
      /* Font specifically for the logo equivalent */
      @import url("https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap");

      .font-script {
        font-family: "Dancing Script", cursive;
      }

      /* Float Animation */
      @keyframes float {
        0% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-20px);
        }
        100% {
          transform: translateY(0px);
        }
      }

      .animate-float {
        animation: float 6s ease-in-out infinite;
      }

      /* Pulse Slow for Aura */
      @keyframes pulse-slow {
        0%,
        100% {
          opacity: 0.4;
          transform: scale(1);
        }
        50% {
          opacity: 0.7;
          transform: scale(1.1);
        }
      }

      .animate-pulse-slow {
        animation: pulse-slow 8s ease-in-out infinite;
      }
    </style>
  </div>
</section>
